var array = [2,4,6,8,10,12,14,16,18]; 
 var key = 6; 
 

 function search(array){ 
 
 
 	var pivot = (array.length - 1)/2); 
 	 
  var found = false; 
	 
 	if(key<array[pivot]){ 
 		pivot = (()/2);  
 		return false; 
 	}  
 	 
 	else if(key==array[pivot]){ 
 		console.log("Value Found"); 
 		return true; 
 	} 
 	 
 	else{ 
 		pivot = (()/2); 
 		return false; 
 	} 
 	 
 } 
 	   
 while(!search){ 
 	search(); 
 } 
