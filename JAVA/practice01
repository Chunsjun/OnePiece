public class Main { public static void main(String[] args) {  Person[] persons = new Person[3];    persons[0] = new Person();  persons[0].setName("Kim");  persons[0].setGender("Male");  persons[0].setAge(21);    persons[1] = new Person();  persons[1].setName("Lee");  persons[1].setGender("Female");  persons[1].setAge(25);    persons[2] = new Person();  persons[2].setName("Park");  persons[2].setGender("Female");  persons[2].setAge(20); }  private static void sortAndPrintInfo(Person[] persons) {  for(int i=0; i<persons.length-1; i++)  {   for(int j=i+1; i<persons.length; j++)   {    if(persons[i].getAge() < persons[j].getAge()){     Person temp = persons[i];     persons[i] = persons[j];     persons[j] = temp;    }   }  }  for(int i=0; i<persons.length; i++)  {   System.out.println(persons[i].getName() + ", ");   System.out.println(persons[i].getGender() + ", ");   System.out.println(persons[i].getAge() + "\n");  } }}
