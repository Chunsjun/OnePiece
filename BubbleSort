#include <iostream> 
 
 
 using namespace std; 
 
 
 int bubbleSort(int * a, int size) 
 { 
     bool sorted = false; 
     bool swapped = false; 
     int temp; 
     int counter = 0; 
 
 
 
 
     for(int i = 0; i<size;i++) 
     { 
         for(int j = 0; j<size-i; j++) 
         { 
             swapped = false; 
             if(a[j]<a[j-1]) 
             { 
               temp = a[j-1]; 
               a[j-1] = a[j]; 
               a[j] = temp; 
               swapped = true; 
               counter++; 
             } 
         } 
     } 
 
 
     return counter; 
 } 
 
 
 void printArray(int * A, int size) 
 { 
     for(int i =0; i<size; i++) 
     { 
         cout<<A[i]<<" "; 
     } 
     cout<<endl; 
 } 
 
 
 int main() 
 { 
     int array[10] = {20,35,8,48,51,23,7,5,2,1}; 
     printArray(array,10); 
     int result = bubbleSort(array, 10); 
     printArray(array,10); 
     cout<<"Number of swaps is "<<result<<endl; 
 
 
     return 0; 
 } 
